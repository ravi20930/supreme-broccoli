{
    "compilerOptions": {
      "target": "ES2021",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "skipLibCheck": true,
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "jsx": "preserve",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "incremental": true,
      "baseUrl": ".",
    },
    "include": [
        "src/**/*",
        "*.ts"
      ],
      
    "exclude": ["node_modules", "dist"]
  }
  